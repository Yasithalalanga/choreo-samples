<?xml version="1.0" encoding="UTF-8"?>
<api context="/HelloWorld" name="HelloWorld" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <variable name="databaseUsername" expression="${configs.databaseUsername != null ? configs.databaseUsername : 'defaultUsername'}" type="STRING"/>
            <variable name="databasePassword" expression="${wso2-vault('databasePassword')}" type="STRING"/>
            <payloadFactory media-type="json">
                 <format>
                    {
                        "databaseUsername": "${vars.databaseUsername}",
                        "databasePassword": "${vars.databasePassword}"
                    }
                </format>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
         <faultSequence>
            <log category="ERROR">
                <message>Error occurred while retrieving database credentials</message>
            </log>
            <payloadFactory media-type="json">
                <format>
                    {
                        "error": true,
                        "message": "Error occurred while retrieving database credentials"
                    }
                </format>
            </payloadFactory>
            <respond/>
        </faultSequence>
    </resource>
</api>

