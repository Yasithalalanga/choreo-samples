<?xml version="1.0" encoding="UTF-8"?>
<api context="/HelloWorld" name="HelloWorld" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <log category="INFO" level="full">
                <message>Printing the log files</message>
                <property expression="wso2:vault-lookup('sample_secret')" name="vaultLookup"/>
                <!-- <property expression="$SYSTEM:stockQuoteEP" name="envMount"/> -->
            </log>
            <payloadFactory media-type="json">
                <format>{"Hello":"$1"}</format>
                <args>
                    <arg expression="$SYSTEM:stockQuoteEP"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>

